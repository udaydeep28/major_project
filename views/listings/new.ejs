<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3 mb-2">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-table">Title</label>
          <input
            name="listing[title]"
            placeholder="enter title"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter valid Title</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-table">Description</label>
          <textarea
            name="listing[description]"
            class="form-control"
            rows="4"
            required
          ></textarea>
          <div class="invalid-feedback">Enter valid Description</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-table">Upload Image</label>
          <input name="listing[image]" type="file" class="form-control" />
          required
        </div>
        <div class="row">
          <div class="mb-3 col-lg-4">
            <label for="price" class="form-table">Price</label>
            <input
              name="listing[price]"
              placeholder="1000"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter valid Price</div>
          </div>
          <div class="mb-3 col-lg-8">
            <label for="country" class="form-table">Country</label>
            <input
              name="listing[country]"
              placeholder="India"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter valid Country</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-table">Location</label>
          <input
            name="listing[location]"
            placeholder="New Delhi,Delhi"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter valid Location</div>
        </div>
        <button class="mt-2">Add</button>
      </form>
    </div>
  </div>
</body>
